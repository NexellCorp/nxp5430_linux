########################################################################
# Get Linux Build Enviornment:
include ../../build.env

######################################################################
# Build options
INCLUDE += -I./
INCLUDE += -I../../library/include
LIBRARY	+= -L../../library/lib 
LIBRARY += -lnxvpu -lnxdsp -lnxv4l2 -lnxvmem

######################################################################
# Target

COBJS	:= enc_perf_main.o

CPPOBJS	:=  

CFLAGS	+= -g

APPNAME := enc_perf_test

######################################################################
# Build
OBJS	:= $(COBJS) $(CPPOBJS)

all:	\
	$(APPNAME)

$(APPNAME):	depend $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $@ $(LIBRARY)

clean:
	rm -f $(APPNAME) *.o .depend

#########################################################################
# Dependency
ifeq (.depend,$(wildcard .depend))
include .depend
endif

SRCS := $(COBJS:.o=.c) $(CPPOBJS:.o=.cpp) $(APPOBJS:.o=.c)
INCS := $(INCLUDE)
depend dep:
	$(CC) -M $(CFLAGS) $(INCS) $(SRCS) > .depend
